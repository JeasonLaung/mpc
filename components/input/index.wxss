/* components/input/index.wxss */
.m-input{
  border: 3rpx solid #aaa;
  display: flex;
  align-items: center;
  height: 70rpx;
  line-height: 70rpx;
  border-radius: 10rpx;
}
.m-input-active{
  border-color: #2d8cf0;
}
.m-input input{
  flex:1;
  padding-left: 20rpx;
  padding-right: 20rpx;
}
.m-input-ext{
  max-width: 40rpx;
  margin-right: 20rpx;
}